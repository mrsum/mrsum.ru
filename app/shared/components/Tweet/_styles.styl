.card
  color #000

.content
  padding 10px

.time
  color #868686
  font-size 18px
  text-transform uppercase
  margin-bottom 10px
  border-bottom 1px solid #e4e4e4

.imageWrapper
  margin-right 20px
  display inline-block
  float left

.image
  width 150px
  height 100px
  border-radius 3px
  background-position no-repeat center center fixed
  background-size cover
  
.text
  color #2b2b2b
  margin-top 10px
  font-size 18px
  word-wrap break-word
