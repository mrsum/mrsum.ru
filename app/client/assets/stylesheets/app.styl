// imports
@import url('https://fonts.googleapis.com/css?family=Anonymous+Pro&subset=cyrillic');
@import 'vendors/reset.styl'

*
  margin 0
  padding 0
  box-sizing border-box
  font-family 'Anonymous Pro', monospace

html
  width 100%
  height 100%
  font-size 14px

body
  width 100%
  color #000
  line-height 1.5

:global
  #background
    background #2980b9 url('~_client/assets/images/pattern.png') repeat 0 0
    animation 10s linear 0s normal none infinite animateBg
    

  @keyframes :global(animateBg)
    from {background-position:0 0;}
    to {background-position: 500px 0;}
    